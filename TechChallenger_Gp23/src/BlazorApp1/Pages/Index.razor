@page "/"
@using WebBlazor.Services;
@inject IArquivoService _arquivoService

<PageTitle>TechChallenge</PageTitle>

<div id="divPrincipal">
    <h1>TechChallenge</h1>
    <img src="~/techChallengeIcon.png" />
</div>

<h1>Arquivos</h1>

<InputFile OnChange="@LoadFiles" multiple />
<button class="btn btn-primary" @onclick="Upload">Upload</button>

@if (arquivos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Img</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var arquivo in arquivos)
            {
                <tr>
                    <td>@arquivo.Nome</td>
                    <td><img src="@arquivo.URL" width="80" height="90" /></td>
                </tr>
            }
        </tbody>
    </table>

}

